.list-group {
  margin-bottom: 16px;
  background: #fff;
  box-shadow: 0 0 1px 0 #ccc;
}

.list {
  position: relative;
  display: flex;
  align-items: center;
  padding: 10px 8px;
}

.list-link:active {
  background: #eee;
}

.list-link::after {
  position: absolute;
  left: 16.7%;
  right: 12px;
  bottom: 0;
  content: "";
  background: #f0f0f0;
  height: 1px;
}

.list-panel::after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  content: "";
  background: #f0f0f0;
  height: 1px;
}

.list-group .list:last-child::after {
  display: none;
}

.list .list-front {
  display: flex;
  align-items: center;
  flex-basis: 16.7%;
}

.list .list-title {
  display: flex;
  align-items: center;
  flex-basis: 62.5%;
}

.list .list-extra {
  display: flex;
  align-items: center;
  flex-basis: 20.8%;
}