/* demo/habit/list/index.wxss */
.list-container {
  display: flex;
  align-items: center;
  height: 180rpx;
}

.btn-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 16%;
  height: 100%;
  background: #ffb6e1;
  outline: solid 1rpx #ff9dd6;
  transition: opacity .3s ease-in;
}

.btn-box:active {
  opacity: .6;
}

.content-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 84%;
  height: 100%;
  background: #f0fcff;
  outline: solid 1rpx #c2ccd0;
}

.habit-count {
  font-size: 24rpx;
  color: #808080;
}

.increase {
  font-size: 84rpx;
  color: white;
}

.ripple {
  position: relative;
  overflow: hidden;
}

.ripple:after {
  content: "";
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  background-image: radial-gradient(circle, #666666 10%, transparent 0%);
  background-repeat: no-repeat;
  background-position: 50%;
  transform: scale(10, 10);
  opacity: 0;
  transition: transform .3s, opacity .5s;
}

.ripple:active:after {
  transform: scale(0, 0);
  opacity: .3;
  transition: 0s;
}