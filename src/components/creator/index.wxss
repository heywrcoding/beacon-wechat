@import '../../../app.wxss';

.creator {
  width: 120rpx;
  text-align: center;
  z-index: 99;
}

.main-ball {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #66ccff;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0rpx 8rpx 15rpx 6rpx #ccc;
}

.main-ball::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #fff;
  opacity: 0;
  transition: all .3s ease-in-out;
}

.main-ball:active::before {
  opacity: .6;
}

.main-icon {
  width: 48rpx;
  height: 48rpx;
  transition: transform .1s ease-in-out;
}

.rotate-45 {
  transform: rotate(-45deg);
}

.item-ball {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  width: 72rpx;
  height: 72rpx;
  margin: 15rpx auto;
  border-radius: 50%;
  box-shadow: 0rpx 4rpx 15rpx 4rpx #ccc;
}

.item-content {
  position: absolute;
  right: 96rpx;
  white-space: nowrap;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  background: rgba(0, 0, 0, 1);
}