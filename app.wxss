/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.md-input {
  position: relative;
  height: 72rpx;
  padding: 8rpx 0;
  transition: all .2s;
}

.md-input-focus {
  caret-color: #66ccff;
}

.md-input::after {
  position: absolute;
  content: "";
  background: #000;
  width: 0;
  height: 1px;
  transition: all .2s ease-in-out;
}

.md-input-editable::after {
  width: 100%;
}

.md-input-focus::after {
  height: 2px;
  background: #66ccff;
}

.md-placeholder {
  position: relative;
  top: calc(1.4rem + 8rpx);
  transition: all .2s ease-in-out;
}

.md-placeholder-float {
  font-size: 32rpx;
  top: 0;
}

.label-light {
  color: #888;
}
